<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.liner.graduationproject.db.activitys.RegisterActivity">


    <ImageView
        android:id="@+id/register_people_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/me_avatar_boy_grey"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/register_title"
        android:layout_below="@id/register_people_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:gravity="center"
        />

    <!--用户名框-->
    <LinearLayout
        android:id="@+id/register_input_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_title"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/usertwo"
            />
        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入用户名"
            android:textSize="13sp"
            />


    </LinearLayout>


    <!--密码框-->

    <LinearLayout
        android:id="@+id/register_input_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_username"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/password"
            />
        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:textSize="13sp"
            />


    </LinearLayout>

    <!--年龄框-->
    <LinearLayout
        android:id="@+id/register_input_age"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_password"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_age"
            />

        <EditText
            android:id="@+id/register_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入年龄"
            android:textSize="13sp"
            />



    </LinearLayout>

    <!--性别框-->
    <LinearLayout
        android:id="@+id/register_input_sex"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_age"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_sex"
            />
        <EditText
            android:id="@+id/register_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入性别"
            android:textSize="13sp"
            />



    </LinearLayout>


    <!--生日框-->
    <LinearLayout
        android:id="@+id/register_input_birthday"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_sex"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_birthday"
            />
        <EditText
            android:id="@+id/register_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入生日"
            android:textSize="13sp"
            />



    </LinearLayout>


    <!--星座框-->
    <LinearLayout
        android:id="@+id/register_input_star"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_birthday"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_star"
            />
        <EditText
            android:id="@+id/register_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入星座"
            android:textSize="13sp"
            />



    </LinearLayout>

    <!--居住地框-->
    <LinearLayout
        android:id="@+id/register_input_place"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_star"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_place"
            />
        <EditText
            android:id="@+id/register_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入居住地"
            android:textSize="13sp"
            />


    </LinearLayout>

    <!--签名框-->
    <LinearLayout
        android:id="@+id/register_input_intro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/register_input_place"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_intro"
            />
        <EditText
            android:id="@+id/register_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入个人简介"
            android:textSize="13sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_input_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/register_input_intro"
        android:layout_alignLeft="@+id/register_input_intro"
        android:layout_alignStart="@+id/register_input_intro">

        <Button
            android:id="@+id/register_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="注册"
            />
        <!--<View-->
            <!--android:layout_width="3dp"-->
            <!--android:layout_height="match_parent"/>-->

        <Button
            android:id="@+id/register_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            />


    </LinearLayout>

</RelativeLayout>
